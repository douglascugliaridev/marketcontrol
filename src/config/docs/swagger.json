{
  "swagger": "2.0",
  "info": {
    "title": "API Exercise Open Air",
    "description": "API para gerenciamento de locais e atividades",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "securityDefinitions": {
    "apiKeyAuth": {
      "type": "apiKey",
      "in": "header",
      "name": "Authorization",
      "description": "JWT Authorization header using the Bearer scheme. Example: \"Authorization: Bearer {token}\""
    }
  },
  "paths": {
    "/usuarios": {
      "post": {
        "tags": [
          "Usuário"
        ],
        "description": "Cadastra um novo usuário",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Informa os dados do usuário",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome do Usuário"
                },
                "cpf": {
                  "type": "string",
                  "example": "CPF padrão 00000000000"
                },
                "dataNascimento": {
                  "type": "string",
                  "example": "Data de Nascimento padração YYYY-MM-DD"
                },
                "email": {
                  "type": "string",
                  "example": "Email"
                },
                "password": {
                  "type": "string",
                  "example": "Senha"
                },
                "confirma_password": {
                  "type": "string",
                  "example": "Confirma Senha"
                },
                "cep": {
                  "type": "string",
                  "example": "CEP"
                },
                "logradouro": {
                  "type": "string",
                  "example": "Logradouro"
                },
                "municipio": {
                  "type": "string",
                  "example": "Município"
                },
                "uf": {
                  "type": "string",
                  "example": "UF"
                },
                "complemento": {
                  "type": "string",
                  "example": "Complemento"
                },
                "numero": {
                  "type": "string",
                  "example": "Numero"
                }
              },
              "required": [
                "nome",
                "cpf",
                "dataNascimento",
                "email",
                "password",
                "confirma_password",
                "cep",
                "logradouro",
                "municipio",
                "uf",
                "complemento",
                "numero"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Usuário"
        ],
        "description": "Lista todos os usuários",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "description": "Efetua o login",
        "parameters": [
          {
            "name": "obj",
            "in": "body",
            "description": "Informa o email e a senha",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "Email"
                },
                "password": {
                  "type": "string",
                  "example": "Senha"
                }
              },
              "required": [
                "email",
                "password"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login efetuado com sucesso"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/locais": {
      "post": {
        "tags": [
          "Local"
        ],
        "description": "Cadastra um novo local",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          },
          {
            "name": "obj",
            "in": "body",
            "description": "Informa os dados do local",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "nome": {
                  "type": "string",
                  "example": "Nome do Local"
                },
                "descricao": {
                  "type": "string",
                  "example": "Descrição do Local"
                },
                "cep": {
                  "type": "string",
                  "example": "CEP padrão 00000000"
                },
                "logradouro": {
                  "type": "string",
                  "example": "Logradouro"
                },
                "numero": {
                  "type": "string",
                  "example": "Numero"
                },
                "complemento": {
                  "type": "string",
                  "example": "Complemento"
                },
                "municipio": {
                  "type": "string",
                  "example": "Município"
                },
                "usuarioId": {
                  "type": "string",
                  "example": "ID do Usuário"
                },
                "uf": {
                  "type": "string",
                  "example": "UF"
                },
                "atividade": {
                  "type": "array",
                  "example": [
                    1
                  ],
                  "items": {
                    "type": "number"
                  }
                }
              },
              "required": [
                "nome",
                "descricao",
                "cep",
                "logradouro",
                "numero",
                "complemento",
                "municipio",
                "usuarioId",
                "uf",
                "atividade"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Local criado com sucesso"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "tags": [
          "Local"
        ],
        "description": "Lista todos os locais",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
